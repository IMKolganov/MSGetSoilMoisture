{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/index.py", // Укажите путь к вашему основному файлу
        "console": "integratedTerminal",
        "env": {
          "FLASK_APP": "index.py",
          "FLASK_ENV": "development", // Или "production", в зависимости от вашего окружения
          "FLASK_RUN_HOST": "0.0.0.0",
          "FLASK_RUN_PORT": "5001"
        },
        "args": [
          "run"
        ]
      }
    ]
  }
  